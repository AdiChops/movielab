doctype html
head
  include headTemplate.pug
  title Person Page
  link(rel="stylesheet", href="/styles/person.css")

body
  include navigationTemplate.pug
  main
    .row
      .left-div
        .row
          .name-background
            h1
              | #{person.name}
          button(type='button')
            | FOLLOW +
        .row
          .column
            .orange-background
              | DIRECTED
            .scrollable-div
              each movie in person.director
                a(href=`/movies/${movie._id}`) #{movie.title} (#{movie.year})
                br
          .column
            .orange-background
              | WRITTEN
            .scrollable-div
              each movie in person.writer
                a(href=`/movies/${movie._id}`) #{movie.title} (#{movie.year})
                br
          .column
            .orange-background
              | ACTED IN
            .scrollable-div
              each movie in person.actor
                a(href=`/movies/${movie._id}`) #{movie.title} (#{movie.year})
                br
      .right-div
